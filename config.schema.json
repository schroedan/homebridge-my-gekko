{
  "pluginAlias": "mygekko",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "myGEKKO Platform Plugin for Homebridge",
  "footerDisplay": "For a detailed description, see the [README.md](http://github.com/schroedan/homebridge-my-gekko#readme) file.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "myGEKKO",
        "required": true
      },
      "plus": {
        "title": "QueryAPI plus",
        "type": "boolean",
        "required": true,
        "description": "Use myGEKKO plus service"
      },
      "host": {
        "title": "QueryAPI host",
        "type": "string",
        "required": true,
        "description": "The host of your myGEKKO",
        "condition": {
          "functionBody": "return !model.plus;"
        }
      },
      "username": {
        "title": "QueryAPI username",
        "type": "string",
        "required": true,
        "description": "The username of your QueryAPI user"
      },
      "password": {
        "title": "QueryAPI password",
        "type": "string",
        "required": true,
        "description": "The password of your QueryAPI user",
        "condition": {
          "functionBody": "return !model.plus;"
        }
      },
      "key": {
        "title": "QueryAPI key",
        "type": "string",
        "required": true,
        "description": "The key of your QueryAPI user",
        "condition": {
          "functionBody": "return !!model.plus;"
        }
      },
      "gekkoid": {
        "title": "QueryAPI gekkoid",
        "type": "string",
        "required": true,
        "description": "The ID of your myGEKKO",
        "condition": {
          "functionBody": "return !!model.plus;"
        }
      },
      "blinds": {
        "title": "Discover blind accessories",
        "type": "boolean",
        "default": true,
        "required": true
      },
      "meteo": {
        "title": "Discover meteo accessories",
        "type": "boolean",
        "default": true,
        "required": true
      },
      "ttl": {
        "title": "Client cache TTL in seconds",
        "type": "number",
        "placeholder": 1
      },
      "retries": {
        "title": "Client retries",
        "description": "The number of retries for failed reqests to myGEKKO.  Default: 3.",
        "type": "integer",
        "default": 3,
        "minimum": 0,
        "maximum": 10
      },
      "interval": {
        "title": "Update interval in seconds",
        "type": "number",
        "placeholder": 3
      },
      "deferance": {
        "title": "Update deferance after allocation in seconds",
        "type": "number",
        "placeholder": 10
      },
      "delay": {
        "title": "Allocation delay in milliseconds",
        "type": "number",
        "placeholder": 500
      }
    }
  },
  "form": null,
  "display": null
}
